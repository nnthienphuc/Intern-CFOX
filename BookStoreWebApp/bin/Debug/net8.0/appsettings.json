{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=Book_Api_Management;Trusted_Connection=True;TrustServerCertificate=True;"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "Jwt": {
    "Key": "${JWT_SECRET_KEY}",
    "Issuer": "BookStoreWebApp",
    "Audience": "BookStoreUsers",
    "ExpireMinutes": 60
  },

  "EmailSettings": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "${SMTP_USERNAME}",
    "SmtpPassword": "${SMTP_PASSWORD}",
    "EnableSSL": true,
    "SenderEmail": "nnthienphuc.web.dev@gmail.com",
    "SenderName": "Book Store Admin"
  },


  "AllowedHosts": "*"
}
